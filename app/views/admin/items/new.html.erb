<h1>Admin::Items#new</h1>
<p>Find me in app/views/admin/items/new.html.erb</p>
<h2>商品新規登録</h2>


<%= form_with model: @item, url:'/lists' do |f| %>
  <P>商品画像</P><%= f.file_field :image, accept: "image/*" %>
  <div class="field">
    <%= f.label :"商品名" %>
    <%= f.text_field :name, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :"商品説明" %>
    <%= f.text_field :introduction, autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.label :genre, 'ジャンル' %>
    <!--<%#= f.select :genre, options_from_collection_for_select(genre.all), { include_blank: '選択してください'}, { class: 'form-control' , required: true } %>-->
  </div>

  <div class="field">
    <%= f.label :"税抜価格" %>
    <%= f.text_field :price, autofocus: true %>
  </div>
<p>販売ステータス</p>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>

<% end %>


